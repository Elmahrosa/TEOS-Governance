{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TEOS Governance Proposal",
  "type": "object",
  "required": ["proposer", "badge", "proposal", "type"],
  "properties": {
    "proposer": { "type": "string", "minLength": 32 },
    "badge": { "type": "string", "enum": ["Citizen","Validator","Founder"] },
    "proposal": { "type": "string", "minLength": 10 },
    "type": {
      "type": "string",
      "enum": ["upgrade","treasury","amendment"]
    }
  }
}
